
generator client {
  provider = "prisma-client"
  output = ".../generated/prisma"
}

datasource db {
  provider = "mysql"
  url = "mysql://root:@localhost:3306/corearte"
}

// Definir modelo dos produtos

model Produts {

  id         Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

}

// Definir modelo dos administradores

model ADM {

  id Int @id @default(autoincrement())
  password String
}